<section id="section-{{ section.id }}" class="Section Section--spacingNormal">
  <div class="rewards-content">
    <div class="rewards-ContentTitle">
      {{ section.settings.title }}
    </div>
    {% if section.blocks.size > 0 %}
    <div class="rewards-list">
      {% for block in section.blocks %}
      <div class="rewards-RewardItem 1/3--phone 1/5--tablet 1/5--lap-and-up">
      	<p class="reward-amount">
          ${{ block.settings.amount }}
        </p>
      	<p class="reward-title">
          {{ block.settings.title }}
        </p>
      	<p class="reward-points">
          {{ block.settings.points }}
        </p>
      </div>
      {% endfor %}
    </div>
    {% endif %}  
  </div>  
</section>

{% schema %}
{
  "name": "Rewards Content",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Redeem Rewards"
    }
  ],
  "blocks": [
	{
      "type": "reward",
      "name": "Reward",
      "settings": [
        {
          "type": "text",
          "id": "amount",
          "label": "Amount"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "REWARD"
        },
        {
          "type": "text",
          "id": "points",
          "label": "Points",
          "default": "500 points"
        }
      ]
    }
  ]
}
{% endschema %}